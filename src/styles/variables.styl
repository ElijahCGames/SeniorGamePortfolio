html
  --base-font-size 20px

body
  --bg-color #283E39
  --bg-content-color #0B1E15
  --title-color #EDE8EC
  --body-color #F6F4F6
  --primary-color #3CD48D
  --secondary-color #7969C9
  --disabled-color #888
  --radius 2px
  --space 3.5rem
  --header-height 80px
  --content-width 860px
  --transition-fast 0.2s
  --transition-normal 0.4s
  --transition-slow 0.6s
  --bg-code rgba(0, 0, 0, 0.3)
  --border-color rgba(255, 255, 255, 0.1)

@media screen and (max-width 650px)
  html
    --base-font-size 17px

  body
    --space 1.5rem
    --header-height 60px
